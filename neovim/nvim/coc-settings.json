        //"field": "\uf93d",
        //"unit": "\uf475",
        //"file": "\uf471",
        //"value": "\uf8a3",
        //"event": "",
        //"folder": "\uf115",
        //"keyword": "\uf893",
        "snippet": "➜",
        //"operator": "\uf915",
        //"reference": "\uf87a",
        //"typeParameter": "\uf278",
        //"default": "\uf29c"
    },

    // 关闭浮窗
    "suggest.floatEnable": false,
    "signature.target": "echo",

    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": ["go", "vim", "josn", "rust"],
    // coc-go
    "go.goplsOptions":{
                "usePlaceholders": true,
                "completeUnimported": true,
                "deepCompletion": true
    },

    // rust-analyzer
    "rust-analyzer.serverPath": "/usr/bin/rust-analyzer",
    //"snippets.ultisnips.enable": false,
    "snippets.snipmate.enable": false,
